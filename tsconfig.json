{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmit": true,
    "allowJs": true,
    "jsx": "react",
    "lib": ["es2015", "es5", "dom", "scripthost", "esnext.asynciterable", "esnext"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {},
    "typeRoots": ["./node_modules/@types", "./packages/@types"]
  },
  "include": ["src"],
  "exclude": [],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  }
}
